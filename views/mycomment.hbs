    }


    .location-context .review-count {
        font-weight: 500;
        margin-bottom: 2px;
        font-size: 20px !important;

    }

    .location-context .point {
        font-weight: 500;
        font-size: 25px !important;
        margin-top: -3px;
        margin-right: 10px;
    }



    .mycomments-rating-card {
        border: hidden;
        background-color: #fff;
        margin-top: 50px;
        margin-bottom: 50px;
    }

    .mycomment-date {
        font-size: 20px;
    }

    .location-context {
        margin: 40px 64px;
        font-weight: bold;
        color: black;
        justify-content: space-between;
    }

    .location-context h1 {
        font-size: 48px;
    }

    .rating-box {
        width: 130px;
        height: 110px;
        margin-right: auto;
        margin-left: auto;
        background-color: #FBC02D;
        color: #fff;
        text-align: center;
    }

    .mycomments-rating-label {

        font-weight: bold;

    }

    /* Rating bar width */
    .rating-bar {
        width: 300px;
        padding: 8px;
        border-radius: 5px;
    }

    /* The bar container */
    .bar-container {
        width: 100%;
        background-color: #f1f1f1;
        text-align: center;
        color: white;
        border-radius: 20px;
        cursor: pointer;
        margin-bottom: 5px;
    }

    /* Individual bars */
    .bar-5 {
        width: 70%;
        height: 13px;
        background-color: #FBC02D;
        border-radius: 20px;

    }

    .bar-4 {
        width: 30%;
        height: 13px;
        background-color: #FBC02D;
        border-radius: 20px;

    }

    .bar-3 {
        width: 20%;
        height: 13px;
        background-color: #FBC02D;
        border-radius: 20px;

    }

    .bar-2 {
        width: 10%;
        height: 13px;
        background-color: #FBC02D;
        border-radius: 20px;

    }

    .bar-1 {
        width: 0%;
        height: 13px;
        background-color: #FBC02D;
        border-radius: 20px;

    }

    .text-left-mx-auto td {
        padding-bottom: 10px;

    }



    .mycomment-info {
        font-size: 24px;
    }

    .star-active {
        color: #FBC02D;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .star-active:hover {
        color: #F9A825;
        cursor: pointer;
    }

    .star-inactive {
        color: #CFD8DC;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .blue-text {
        color: #0091EA;
    }

    .content {
        font-size: 18px;
    }


    .comment-card {
        border: hidden;
        background-color: #fff;
        padding-left: 50px;
        padding-right: 50px;
        margin-top: 30px;
        padding-top: 30px;
        padding-bottom: 30px;
    }

    .profile-pic {
        width: 240px;
        height: 160px;
        object-fit: cover;
        margin-right: 30px;
    }




    .mycomments hr {
        border-top: 1px solid #ccc;
        /* Çizgi rengi ve kalınlığı */
        margin: 20px 0;
        /* Çizginin üst ve alt boşlukları */
    }

    .location-context img {
        width: 32px;
        height: 32px;
        margin-right: 10px;
        object-fit: cover;
    }



    .location-context .fav img {
        width: 64px !important;
        height: 64px !important;
        object-fit: cover;
        margin-top: -15px;
    }

    .location-context .extra-info p {
        opacity: 0.8;
        font-weight: normal;

    }

    .location-context .location-info {

        margin: -30px -40px;
    }

    .mycomments-rating-card .my-ratings {
        margin-right: 200px;
