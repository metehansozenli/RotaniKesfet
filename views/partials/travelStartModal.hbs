<div class="modal fade custom-modal travelStartModal" id="travelStartModal">
  <div class="modal-dialog" style="max-width: 860px;">
    <div class="modal-content travelStartModal-content">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span>&times;</span></button>
      <div class="main-modal" style="display: flex;">
        <div class="calendar-category-container">
          <div class="select-btn" id="select-btn">
            <span class="btn-text">Kategoriler</span>
            <span class="arrow-dwn">
              <i class="fa-solid fa-chevron-down"></i>
            </span>
          </div>
          <ul class="list-items categoryItems">
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Eski Ulaşım Araçları ve İş Merkezleri</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Eğlence ve Etkinlik Alanları</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Diğer</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Alışveriş ve Pazarlar</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Restoran</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Otel</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Tarihi ve Kültürel Mekanlar</span>
            </li>
            <li class="item">
              <span class="checkbox">
                <i class="fa-solid fa-check check-icon"></i>
              </span>
              <span class="item-text">Doğal Alanlar ve Manzaralar</span>
            </li>
          </ul>

          <div id="locationCounts" style="d-block">
            
          </div>
        </div>



        <div class="seyahatAdiveSehirSecme d-block">
          <h3>Seyahat oluşturun</h3>
          <div class="seyahatAdiSec" style="display:inline-block justify-content:start;">


            <label for="seyahatAdi">Seyahat Adı</label><br>
            <input class="seyahatadi-input" type="text" id="seyahatAdi" name="seyahatAdi" maxlength="80"
              placeholder="Örneğin Türkiye'de yaz tatili" style="max-width: 700px; height: 60px; border-radius: 5px">
            <br><label for="destinasyon">Destinasyon</label>
            <p>Birden fazla şehir seçmek için şehir adını yazın ve 'enter' tuşuna basın</p>
            <div class="content">
              <ul class="destinasyon-list">
                <div class="autocomplete-container">
                  <input maxlength="20" type="text" spellcheck="false" id="destinasyon-tag" name="destinasyon" 
                    placeholder="Şehir Ekle" class="autocomplete-input">
                </div>
              </ul>
            </div>


          </div>
          <div class="sehirSecDetaylari">
            <p>*<span>5</span> şehir seçme hakkınız kaldı</p>
            <button>Hepsini kaldır</button>
          </div>


          <div class="container takvim d-flex">
            <form class="calendar" id="calendar" autocomplete="off">
              <div class="etiket d-flex">
                <div>
                  <label id="labelstart" class="text-left ml-1">Başlangıç Tarihi</label>
                </div>
                <div style="margin-left:52px">
                  <label id="labelend" class="text-left">Bitiş Tarihi</label>
                </div>

              </div>
            </form>
            <button type="button" id="createTravelBtn">Seyahat Oluştur</button>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


