    .route-title {
        margin-top: 100px;
        margin-left: 30px;
        margin-bottom: 60px;
        font-size: 42px;
        font-weight: bold;
    }

    .clusters hr {
        margin-bottom: 30px;

    }


    .btn-text{
        display: flex !important;
        justify-content: center !important;
        text-align: center !important;
        vertical-align: middle;
        
    }
