        list-style-type: none;
        margin-left: 50px;
        padding: 0px;
        width: 100%;
    }

    .cityRoute-list li {
        padding: 14px;
        border-radius: 10px;
        /* İstediğiniz yuvarlama miktarını ayarlayın */
